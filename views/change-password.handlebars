<section id="welcome">
	<div class="welcome-text">
		<div class="sign-in">
			<div>
				<h2>Change Password</h2>

				{{#if errors}}
				{{#errors}}
					<p>{{this.text}}</p>
				{{/errors}}
				{{/if}}

			</div>
			<form type="hidden" method="POST">
				<div class="form-group">
					<label for="old-password">Old Password:</label>
					<input type="password" class="form-control" id="old-password" placeholder="Enter your old password" name="old_password">
				</div>
				<div class="form-group">
					<label for="new-password">New password:</label>
					<input type="password" class="form-control" id="new-password" placeholder="Enter a new password" name="new_password">
				</div>
				<div class="form-group">
					<label for="new-password">Again new password:</label>
					<input type="password" class="form-control" id="new-password-repeat" placeholder="Enter a new password again" name="new_password_repeat">
				</div>
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</section>

<script type="text/javascript">
(function fn() {
	function toConvertUpperCaseOnlyFirstLetter(str) {
		return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
	}

	setInterval(
		function(){
			$('input').css('color', '#000272');
			$('input').css('font-weight', 'bold');
		}, 100);

})();
</script>
