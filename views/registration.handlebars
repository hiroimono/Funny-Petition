<section id="registration">
	<div class="welcome-text">
		<div class="registration">
			<div>
				<h2>Registration</h2>
				{{#if errors}}
					<p>Oops! There is something wrong!</p>
				{{#errors}}
					<p class='error'>{{this.text}}.</p>
				{{/errors}}
				{{/if}}
			</div>
			<form method="POST">
				<div class="form-group">
					<label for="name">Name:</label>
					<input type="text" class="form-control" id="name" placeholder="Enter your name" name="name">
				</div>
				<div class="form-group">
					<label for="surname">Surname:</label>
					<input type="text" class="form-control" id="surname" placeholder="Enter your surname" name="surname">
				</div>
				<div class="form-group">
					<label for="email">Email:</label>
					<input type="email" class="form-control" id="email" placeholder="Enter your email" name="email">
				</div>
				<div class="form-group">
					<label for="password">Password:</label>
					<input type="password" class="form-control" id="password" placeholder="Enter a password" name="pass">
				</div>
				<div class="form-group">
					<label for="password">Password again:</label>
					<input type="password" class="form-control" id="password" placeholder="Enter password again" name="passagain">
				</div>
				<input type="hidden" name="_csrf" value="{{csrfToken}}">
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</section>

<script type="text/javascript">
(function fn() {
	function toConvertUpperCaseOnlyFirstLetter(str) {
		return str.charAt(0).toUpperCase() + str.slice(1).toLowerCase();
	}

	setInterval(
		function(){
			$('#name').val(toConvertUpperCaseOnlyFirstLetter($('#name').val()));
			$('#surname').val(toConvertUpperCaseOnlyFirstLetter($('#surname').val()));
			$('input').css('color', '#000272');
			$('input').css('font-weight', 'bold');
		}, 100);

})();
</script>
